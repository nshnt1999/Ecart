<%- include('../layout/admin_header'); -%>

<h2 class="page-title">Edit a Page</h2>
<a href="/admin/pages/" class="btn btn-primary">Back to all pages</a>
<br><br><br>

<h5 class="alert-danger" style="display: inline-block;"><%=errors%></h5>


<form method="POST" action="/admin/pages/edit-page/<%= slug%>">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title%>" placeholder="Add title">
    </div>

    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug" value="<%= slug%>" placeholder="Add slug">
    </div>

    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" class="form-control"cols="30" rows="10"><%= content%></textarea>
    </div>
    <input type="hidden" name="id" value="<%= id%>">
    <br><br>
    <center>
    <button class="btn btn-primary">Submit</button>
    </center>
    <br><br><br>
</form>


<%- include('../layout/admin_footer'); -%>